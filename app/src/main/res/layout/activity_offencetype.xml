<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:visibility="visible"
    tools:context="com.example.hp.myapplication.MainActivity">


    <TextView
        android:id="@+id/textView"
        android:layout_width="350dp"
        android:layout_height="100dp"
        android:layout_marginTop="22dp"
        android:elevation="10dp"
        android:text="Offence Type"
        android:textColor="@android:color/background_light"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignParentRight="true"
        android:layout_alignParentEnd="true" />

    <Button
        android:id="@+id/butt24"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttom"
        android:text="Traffic Signal Related Offences"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_below="@+id/butt5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="16dp" />

    <Button
        android:id="@+id/butt3"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttom"
        android:text="Road Marketing Related Offences"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_marginTop="12dp"
        android:layout_below="@+id/butt2"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/butt4"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttom"
        android:text="Number Plate Related Offences"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_marginTop="10dp"
        android:layout_below="@+id/butt3"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Button
        android:id="@+id/butt5"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttom"
        android:text="Traffic Police Related Offences"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_below="@+id/butt4"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="18dp" />

    <Button
        android:id="@+id/butt1"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textView"
        android:layout_marginTop="16dp"
        android:background="@drawable/buttom"
        android:text="Offences Related To Document"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <Button
        android:id="@+id/butt2"
        android:layout_width="500dp"
        android:layout_height="wrap_content"
        android:background="@drawable/buttom"
        android:text="Offences Related To Driving"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_below="@+id/butt1"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

</RelativeLayout>
