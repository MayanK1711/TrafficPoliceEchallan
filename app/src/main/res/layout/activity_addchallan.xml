<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="@drawable/back"
    android:visibility="visible"
    tools:context="com.example.hp.myapplication.MainActivity">


    <EditText
        android:id="@+id/dname"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_stat_user"
        android:ems="10"
        android:hint="Enter Name of driver"
        android:inputType="textPersonName"
        android:textSize="16dp"
        android:layout_alignTop="@+id/textView"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="82dp" />

    <EditText
        android:id="@+id/vechileno"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:layout_marginTop="24dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_stat_veh"
        android:ems="10"
        android:hint="Enter Vehicle Number"
        android:inputType="textPersonName"
        android:textSize="16dp"
        android:layout_below="@+id/dname"
        android:layout_alignLeft="@+id/dname"
        android:layout_alignStart="@+id/dname" />

    <EditText
        android:id="@+id/uidvalue"
        android:layout_width="150dp"
        android:layout_height="60dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_stat_person"
        android:ems="10"
        android:hint="Enter Unique ID"
        android:inputType="textPersonName"
        android:textSize="16dp"
        android:layout_below="@+id/textview3"
        android:layout_alignRight="@+id/textView"
        android:layout_alignEnd="@+id/textView" />

    <TextView
        android:id="@+id/textView"
        android:layout_width="300dp"
        android:layout_height="80dp"
        android:layout_marginTop="6dp"
        android:elevation="10dp"
        android:text="Add Challan"
        android:textColor="@android:color/background_light"
        android:textSize="50dp"
        android:textStyle="bold"
        android:layout_alignParentTop="true"
        android:layout_alignLeft="@+id/butt24"
        android:layout_alignStart="@+id/butt24" />

    <Button
        android:id="@+id/butt24"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:background="@drawable/buttom"
        android:text="Next"
        android:textColor="@android:color/background_light"
        android:textSize="20sp"
        android:layout_below="@+id/dmobile"
        android:layout_centerHorizontal="true"
        android:layout_marginTop="13dp" />

    <TextView
        android:id="@+id/textview3"
        android:layout_width="500dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/spinner"
        android:layout_marginTop="16dp"
        android:background="@android:color/background_dark"
        android:text="Select and Enter Unique ID"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <TextView
        android:id="@+id/textView5"
        android:layout_width="500dp"
        android:layout_height="40dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/vechileno"
        android:layout_marginTop="16dp"
        android:background="@android:color/background_dark"
        android:text="Select Vehicle Type"
        android:textColor="@android:color/background_light"
        android:textSize="20sp" />

    <Spinner
        android:id="@+id/spinner"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_below="@+id/textView5"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <EditText
        android:id="@+id/dmobile"
        android:layout_width="400dp"
        android:layout_height="60dp"
        android:background="#11000000"
        android:drawableLeft="@drawable/ic_stat_contact"
        android:ems="10"
        android:hint="Enter Mobile Number"
        android:inputType="phone"
        android:textSize="16dp"
        android:layout_marginTop="24dp"
        android:layout_below="@+id/uidvalue"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true" />

    <Spinner
        android:id="@+id/spinner1"
        android:layout_width="200dp"
        android:layout_height="60dp"
        android:layout_alignParentLeft="true"
        android:layout_alignParentStart="true"
        android:layout_below="@+id/textview3" />

</RelativeLayout>
